<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bfcfashion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BFCFashion">
        <activity android:name=".module.activity.SettingsActivity"></activity>
        <activity android:name=".common.MainActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".common.SplashActivity" />
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>